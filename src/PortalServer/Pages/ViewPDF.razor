@page "/views/{PDF_Path}"
@inject CustomIDataProtection CustomProtection

<AuthorizeView>
    <Authorized>
       
        <embed src="https://localhost:44315/api/Views/streamPDF/@PDF_Path" style="width: 100%; height:1200px" />
    </Authorized>
    <NotAuthorized>
        <embed src="https://localhost:44315/api/Views/streamPDF/@PDF_Path" style="width: 100%; height:1200px" />

    </NotAuthorized>
</AuthorizeView>



@code {
    [Parameter]
    public string PDF_Path { get; set; }



    [Parameter]
    public string PDF_Name { get; set; }


    protected override void OnInitialized()
    {
        PDF_Path = CustomProtection.Encode(PDF_Path);
    }



}
